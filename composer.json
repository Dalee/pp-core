{
	"name": "pp/core",
	"type": "pp-core",
	"description": "Proxima Portal",
	"authors": [
		{
			"name": "Dalee Developers Team",
			"email": "dev@dalee.ru"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "http://packages.git.dalee.ru"
		}
	],
	"require": {
		"pp/installers": "*",
		"monolog/monolog": "^1.19",
		"symfony/http-foundation": "~2.8",
		"ramsey/uuid": "^3.5",
		"symfony/console": "^2.8",
		"symfony/event-dispatcher": "^2.8",
		"symfony/yaml": "^2.8",
		"symfony/var-dumper": "^2.8"
	},
	"config": {
		"secure-http": false,
		"preferred-install": {
			"pp/*": "source",
			"*": "dist"
		},
		"platform": {
			"php": "5.4.22"
		}
	},
	"autoload": {
		"psr-4": {
		  	"Tests\\": ["tests/"],
			"PP\\": ["src/"]
		}
	},
	"bin": [
		"bin/pp"
	],
	"require-dev": {
		"phpunit/phpunit": "^4.8"
	}
}
