{
	"name": "dalee/pp-core",
	"type": "pp-core",
	"description": "Proxima CMS",
	"license": "MIT",
	"authors": [
		{
			"name": "Dalee Dev Team",
			"email": "topdev@dalee.ru"
		}
	],
	"config": {
		"platform": {
			"php": "8.2"
		},
		"allow-plugins": {
			"dalee/pp-installers": true
		}
	},
	"bin": [
		"bin/pp"
	],
	"require": {
		"php": "^8.2",
		"dalee/pp-installers": "~1.0.5",
		"monolog/monolog": "^3.0",
		"symfony/http-foundation": "^6.0",
		"ramsey/uuid": "^3.5",
		"symfony/console": "^6.0",
		"symfony/event-dispatcher": "^6.0",
		"symfony/yaml": "^6.0",
		"vlucas/phpdotenv": "^2.4",
		"symfony/config": "^6.0",
		"symfony/dependency-injection": "^6.0",
		"symfony/finder": "^6.0",
		"symfony/cache": "^6.0",
		"ext-json": "*",
		"ext-pcntl": "*",
		"ext-posix": "*",
		"ext-simplexml": "*",
		"ext-pgsql": "*",
		"ext-gd": "*",
		"ext-fileinfo": "*",
		"ext-dom": "*",
		"ext-xsl": "*",
		"ext-mbstring": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.0",
		"friendsofphp/php-cs-fixer": "^3.23"
	},
	"autoload": {
		"psr-4": {
			"Tests\\": [
				"tests/"
			],
			"PP\\": [
				"src/"
			]
		}
	}
}
